generator client {
  provider = "prisma-client-js"
  output = "../../../../../../node_modules/.prisma/client/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentType {
  visa
  mir
  iomoney
}

//////////////////// USERS ////////////////////
model User {
  id                String    @id @default(uuid())
  createdAt         DateTime? @default(now()) @map("created_at")
  updatedAt         DateTime? @updatedAt @map("updated_at")

  name              String
  email             String    @unique
  passwordHash      String    @map("password_hash")
  avatar            String?
  gender            String
  birthDate         DateTime?  @map("birth_date")
  description       String?
  location          String 
  pageBackground    String?    @map("page_background")

  role              String?
  level             String?
  trainingType      String[]  @map("training_type")
  trainingDuration  String?   @map("training_duration")
  loseCaloriesLimit Int?      @map("lose_calories_limit")
  dayCaloriesLimit  Int?      @map("day_calories_limit")
  isReadyToTraining Boolean?  @map("is_ready_to_training")

  certificates      String[]

  training Training[]
  balance Balance[]
  order Order[]
  trainingReview TrainingReview[]
  refreshToken RefreshToken[]

  trainingRequestInitiator TrainingRequest[] @relation("initiator")
  trainingRequestTrainer TrainingRequest[] @relation("trainer")

  @@map("users")
}

//////////////////// TRAINIGNS ////////////////////
model Training {
  id                String    @id @default(uuid())
  createdAt         DateTime? @default(now()) @map("created_at")
  updatedAt         DateTime? @updatedAt @map("updated_at")

  title             String
  background        String
  userLevel         String
  trainingType      String    @map("training_type")
  trainingDuration  String    @map("training_duration")
  price             Int
  discount          Int?
  calories          Int
  description       String
  gender            String
  video             String
  rating            Int?
  trainersName      String?    @map("trainers_name")
  isSpecial         Boolean?  @map("is_special")
  userId            String    @map("user_id")

  balance           Balance[]
  order             Order[]
  review            TrainingReview[]
  user              User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("trainings")
}

//////////////////// ORDERS ////////////////////
model Order {
  id                      String      @id @default(uuid())
  createdAt               DateTime?   @default(now()) @map("created_at")
  updatedAt               DateTime?   @updatedAt @map("updated_at")

  type                    String
  userId                  String      @map("user_id")
  trainingId              String      @map("training_id")
  price                   Int
  trainingsCount          Int         @map("trainings_count")
  totalPrice              Int         @map("total_price")
  paymentType             PaymentType @map("payment_type")

  training Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("orders")
}

//////////////////// BALANCE ////////////////////
model Balance {
  id                      String      @id @default(uuid())
  createdAt               DateTime?   @default(now()) @map("created_at")
  updatedAt               DateTime?   @updatedAt @map("updated_at")

  trainingId              String      @map("training_id")
  userId                  String      @map("user_id")
  remainingTrainingsCount Int         @map("remaining_trainings_count")

  hasTrainingStarted      Boolean?     @map("has_training_started")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  training Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)

  @@map("balances")
}

//////////////////// REVIEWS ////////////////////
model TrainingReview {
  id         String      @id @default(uuid())
  createdAt  DateTime?   @default(now()) @map("created_at")
  updatedAt  DateTime?   @updatedAt @map("updated_at")

  userId     String      @map("user_id")
  trainingId String      @map("training_id")
  rating     Int
  text       String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  training Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  
  @@map("training_reviews")
}

//////////////////// TRAINING REQUESTS ////////////////////
model TrainingRequest {
  id          String      @id @default(uuid())
  createdAt   DateTime?   @default(now()) @map("created_at")
  updatedAt   DateTime?   @updatedAt @map("updated_at")

  initiatorId String      @map("initiator_id")
  trainerId   String      @map("trainer_id")
  status      String

  initiator User @relation(name: "initiator", fields: [initiatorId], references: [id], onDelete: Cascade)
  trainer User @relation(name: "trainer", fields: [trainerId], references: [id], onDelete: Cascade)
  
  @@map("training_requests")
}

//////////////////// TOKENS ////////////////////
model RefreshToken {
  id        String    @id @default(uuid())
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  expiresIn DateTime? @map("expires_in")
  tokenId   String    @map("token_id")
  userId    String    @map("user_id")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_token")
}