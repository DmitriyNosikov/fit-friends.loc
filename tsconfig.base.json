{
  "compileOnSave": false,
  "compilerOptions": {
    // Dirs
    "baseUrl": ".",
    "sourceMap": true,

    // Modules
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "removeComments": true,


    /* Linting */
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,

    /* Paths */
    "paths": {
      "@server/libs/*": ["server/src/app/libs/*"],
      "@server/user/*": ["server/src/app/user/*"],
      "@server/training/*": ["server/src/app/training/*"],
      "@server/order/*": ["server/src/app/order/*"],
      "@server/balance/*": ["server/src/app/order/*"],

      "@client/*": ["client/*"],
      
      "@shared/*": ["shared/*"],
    },
  },
  "exclude": ["node_modules"]
}
