generator client {
  provider = "prisma-client-js"
  output = "../../../../../../node_modules/.prisma/client/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////// USERS ////////////////////

model User {
  id           String       @id @default(uuid())
  createdAt    DateTime?    @default(now()) @map("created_at")
  updatedAt    DateTime?    @updatedAt @map("updated_at")

  @@map("users")
}

